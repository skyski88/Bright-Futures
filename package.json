{
  "name": "mern-project-app",
  "version": "1.0.0",
  "description": "",
  "main": "server.js",
  "scripts": {
    "start": "if-env NODE_ENV=production && npm run start:prod || npm run start:dev",
    "start:prod": "node server.js",
    "start:dev": "concurrently \"nodemon --ignore 'client/*'\" \"npm run client\"",
    "client": "cd client && npm run start",
    "seed": "node scripts/seedDB.js",
    "install": "cd client && npm install",
    "build": "cd client && npm run build",
    "heroku-postbuild": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ac08/Project3.git"
  },
  "author": "Andrew Circelli, Andrew Gunter, Collin Bryan, Bradley Williams",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^5.3.0",
    "nodemon": "^1.18.7"
  },
  "dependencies": {
    "@egjs/react-flicking": "^3.5.2",
    "@sendgrid/mail": "^7.4.2",
    "axios": "^0.21.1",
    "bootstrap": "^4.6.0",
    "cookie-parser": "^1.4.5",
    "dotenv": "^8.2.0",
    "express": "^4.16.3",
    "express-session": "^1.17.1",
    "if-env": "^1.0.4",
    "mongoose": "^5.3.16",
    "morgan": "^1.10.0",
    "passport": "^0.4.1",
    "passport-local": "^1.0.0",
    "react-bootstrap": "^1.4.3",
    "react-icons": "^4.1.0",
    "react-multi-carousel": "^2.6.1",
    "react-slick": "^0.28.0",
    "unirest": "^0.6.0"
  },
  "bugs": {
    "url": "https://github.com/ac08/Project3/issues"
  },
  "homepage": "https://github.com/ac08/Project3#readme",
  "nodemonConfig": {
    "restartable": "rs",
    "ignore": [
      "node_modules/**/node_modules"
    ],
    "delay": "2500",
    "env": {
      "NODE_ENV": "development",
      "PORT": 3001
    }
  }
}
